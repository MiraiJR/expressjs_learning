{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",   
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                                     
    "skipLibCheck": true,
    "allowJs": true,
    "outDir": "dist",                          
    "rootDir": ".",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "paths": {
      "@/applications/*": ["./src/applications/*"],
      "@/shared/*": ["./src/shared/*"]
    },
    "typeRoots": ["./src/shared/types", "./node_modules/@types"]
  }
}
